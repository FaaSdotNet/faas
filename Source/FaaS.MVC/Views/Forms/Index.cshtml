@model FormViewModel

@{
    ViewData["Title"] = "Forms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Form - @Model.DisplayName</h2>

<h3>Description</h3>
<p>@Model.Description</p>
<h3>Created</h3>
<p>@Model.Created</p>
@Html.ActionLink("Edit", "Edit", "Forms", new { id = Model.FormCodeName }) |
@Html.ActionLink("Details", "Details", "Forms", new { id = Model.FormCodeName }) |
@Html.ActionLink("Delete", "Delete", "Forms", new { id = Model.FormCodeName })
<table class="table">
    <thead>
        <tr>
            <th>
                Elements
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in ViewBag.ElementDictionary)
{
    <tr>
        <td>
            @item.Value
        </td>
        <td>
            @Html.ActionLink("Details", "Details", "Elements", new { id = item.Key })
        </td>
    </tr>
}
    </tbody>
</table>
@Html.ActionLink("Add new Element", "Create", "Elements", new { id = Model.FormCodeName })