@model ElementViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form id="coolForm" asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Options" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Options" class="form-control" style="display:none;"/>
                <a id="add" href="#">
                    <i class="glyphicon glyphicon-plus-sign"></i>
                </a>
                <a id="delete" href="#">
                    <i class="glyphicon glyphicon-remove-sign"></i>
                </a>
                <span id="na" class="glyphicon glyphicon-minus-sign"></span>
                <span asp-validation-for="Options" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Type" asp-items="@Html.GetEnumSelectList(Model.Type.GetType())" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Required" />
                    <label asp-for="Required"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to Form", "Index", "Forms", new { id = ViewData["formId"] })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
