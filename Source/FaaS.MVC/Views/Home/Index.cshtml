@model UserViewModel
@{
    ViewData["Title"] = "Log In";
}


<div class="row">
    <div class="col-sm-6">
        @if (ViewData["userDisplayName"] == null)
        {
            <h2>Welcome to Form as a Service!</h2>
            <p>Here will be a totally awesome description. Or whatever.</p>
        }
        else
        {
            <h2>Hi @ViewData["userDisplayName"]!</h2>
            <p>Choose a project or create a new one to start.</p>
        }
    </div>
    <br /><br />
    <div class="col-sm-6" style="display:@(ViewData["userDisplayName"] == null ? "inline" : "none")">
        <form asp-action="LogIn">
            <div class="form-horizontal">
                <h4 class="text-center">Sign in with your Google Account</h4>
                <img class="img-responsive center-block img-circle" src="~/images/default_user.png" alt="defaut_user" height="150" width="150"/>
                <br />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="GoogleId" class="col-md-5 control-label"></label>
                    <div class="col-md-4">
                        <input asp-for="GoogleId" class="form-control" placeholder="Enter your Google ID"/>
                        <span asp-validation-for="GoogleId" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-10">
                        <input type="submit" value="Log In" class="btn btn-default" />
                    </div>
                </div>
                <p class="text-center">
                    Don't have an account?
                    <a asp-area="" asp-controller="Users" asp-action="Create">Create a new one!</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
